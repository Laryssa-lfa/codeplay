<% if lesson.errors.any? %>
  <div id = "error_explanation">
    <ul>
      <% lesson.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [:admin, course, lesson] do |l| %>
  <%= l.label :name %>
  <%= l.text_field :name %>
  <br>
  <%= l.label :duration %>
  <%= l.number_field :duration, step: 1, min: 0 %>
  <br>
  <%= l.label :content %>
  <%= l.text_field :content %>
  <br>
  <%= l.submit %>
<% end %>

<br>
<%= link_to 'Voltar', [:admin, course] %>

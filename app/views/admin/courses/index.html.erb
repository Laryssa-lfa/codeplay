<% if @courses.empty? %>
  <h2>Nenhum curso disponível</h2>
<% else %>
    <h1>Cursos Disponíveis</h1>
<% end %>

<% @courses.each do |course| %>
    <h3>Curso: <%= link_to course.name, [:admin, course] %></h3>
    <h4>Descrição: <%= course.description %></h4>
    <h4><%= number_to_currency course.price %></h4>
<% end %>

<br>
<%= link_to 'Registrar um Curso', new_admin_course_path %>
<%= link_to 'Voltar', root_path %>

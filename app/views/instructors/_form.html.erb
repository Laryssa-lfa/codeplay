<% if @instructor.errors.any? %>
    <div id = "error_explanation">
      <ul>
        <% @instructor.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model: @instructor do |i| %>
  <%= i.label :name %>
  <%= i.text_field :name %>
  <br>
  <%= i.label :email %>
  <%= i.email_field :email %>
  <br>
  <%= i.label :bio %>
  <%= i.text_area :bio %>
  <br>
  <%= i.label :profile_picture %>
  <%= i.file_field :profile_picture %>
  <br>
  <%= i.submit %>
<% end %>

<br>
<%= link_to "Voltar", instructors_path %>

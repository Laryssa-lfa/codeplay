<% if instructor.errors.any? %>
    <div id = "error_explanation">
      <ul>
        <% instructor.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model: instructor do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <%= form.label :email %>
  <%= form.email_field :email %>
  <br>
  <%= form.label :bio %>
  <%= form.text_area :bio %>
  <br>
  <%= form.label :profile_picture %>
  <%= form.file_field :profile_picture %>
  <br>
  <%= form.submit %>
<% end %>

<br>
<%= link_to "Voltar", instructors_path %>

<h1>Detalhes do Professor(a) <%= @instructor.name %></h1>

<dl>
  <dt><%= Instructor.human_attribute_name(:email) %></dt>
  <dd><%= @instructor.email %></dd>
  <dt><%= Instructor.human_attribute_name(:bio) %></dt>
  <dd><%= @instructor.bio %></dd>
  <dt><%= Instructor.human_attribute_name(:profile_picture) %></dt>
  <% if @instructor.profile_picture.attached? %>
    <%= image_tag @instructor.profile_picture %>
  <% end %>
</dl>

<br>
<%= link_to "Editar", edit_instructor_path(@instructor) %>
<br>
<%= link_to "Apagar", @instructor, method: :delete %>
<br>
<%= link_to "Voltar", instructors_path %>

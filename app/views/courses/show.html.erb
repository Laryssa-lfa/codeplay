<h1>Detalhes do curso <%= @course.name %></h1>

<dl>
  <dt>Descrição</dt>
  <dd><%= @course.description %></dd>
  <dt>Código do curso</dt>
  <dd><%= @course.code %></h3></dd>
  <dt>Valor</dt>
  <dd><%= number_to_currency @course.price, unit: 'R$', separator: ',', delimiter: '.', format: '%u %n' %></dd>
  <dt>Data limite matrícula</dt>
  <dd><%= @course.enrollment_deadline.strftime('%d/%m/%Y') %></dd>
</dl>

<p><%= link_to 'Voltar', courses_path %></p>
